@model CustomerCarePortalLab.Pages.Agents.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Agent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Agent.Name" class="control-label"></label>
                <input asp-for="Agent.Name" class="form-control" />
                <span asp-validation-for="Agent.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Agent.TeamManager" /> @Html.DisplayNameFor(model => model.Agent.TeamManager)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Agent.DepartmentHead" /> @Html.DisplayNameFor(model => model.Agent.DepartmentHead)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Agent.OrganizationHead" /> @Html.DisplayNameFor(model => model.Agent.OrganizationHead)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Agent.TeamID" class="control-label"></label>
                <select asp-for="Agent.TeamID" class ="form-control" asp-items="ViewBag.TeamID"></select>
            </div>
           @* <div class="form-group">
                <label asp-for="Agent.TicketID" class="control-label"></label>
                <input asp-for="Agent.TicketID" class="form-control" />
                <span asp-validation-for="Agent.TicketID" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

